<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="control">
    <div>
      <%= form.text_field :name, class: "input", placeholder:'Nombre' %><br><br>
    </div>

    <div>
      <%= form.text_field :reference, class: "input", placeholder:'Código' %><br><br>
    </div>

    <div>
      <%= form.text_area :description, class: "input", placeholder:'Descripción' %><br><br>
    </div>

    <div>
      <%= form.number_field :quantity, class: "input", placeholder:'Cantidad' %><br><br> 
    </div>

    <div>
      <%= form.text_field :price, class: "input", placeholder:'Precio' %><br><br> 
    </div>

    <div>
      <%= form.text_field :img_url, class: "input", placeholder:'Url de la imagen'%><br><br> 
    </div>

    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %>

