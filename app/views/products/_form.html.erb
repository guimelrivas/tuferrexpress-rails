<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div>
    <input class="input is-large" type="text" placeholder="Producto">
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.text_field :reference %>
    <%= form.text_field :name, class: "form-control", placeholder: 'Código' %>
  </div>

  <div>
    <input class="input is-large" type="text" placeholder="Descripción">
    <%= form.text_area :description %>
  </div>

  <div>
    <input class="input is-large" type="text" placeholder="Cantidad">
    <%= form.number_field :quantity %>
  </div>

  <div>
    <input class="input is-large" type="text" placeholder="Precio">
    <%= form.text_field :price %>
  </div>

  <div>
  <input class="input is-large" type="text" placeholder="Url de la imagen">
    <%= form.text_field :img_url %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

